<script>
const emotionMeta = {
  joy:{en:"joy",ko:"기쁨",color:"#FFD43B"},
  trust:{en:"trust",ko:"신뢰",color:"#69DB7C"},
  fear:{en:"fear",ko:"두려움",color:"#15AABF"},
  surprise:{en:"surprise",ko:"놀람",color:"#228BE6"},
  sadness:{en:"sadness",ko:"슬픔",color:"#4C6EF5"},
  disgust:{en:"disgust",ko:"혐오",color:"#7950F2"},
  anger:{en:"anger",ko:"분노",color:"#FA5252"},
  anticipation:{en:"anticipation",ko:"기대",color:"#FD7E14"}
};

const slides = [
      {category:"PRIMARY",freq:"often",pair:["joy","trust"],answerEn:"love",answerKo:"사랑"},
      {category:"PRIMARY",freq:"often",pair:["trust","fear"],answerEn:"submission",answerKo:"복종"},
      {category:"PRIMARY",freq:"often",pair:["fear","surprise"],answerEn:"alarm",answerKo:"경계"},
      {category:"PRIMARY",freq:"often",pair:["surprise","sadness"],answerEn:"disappointment",answerKo:"실망"},
      {category:"PRIMARY",freq:"often",pair:["sadness","disgust"],answerEn:"remorse",answerKo:"회한"},
      {category:"PRIMARY",freq:"often",pair:["disgust","anger"],answerEn:"contempt",answerKo:"경멸"},
      {category:"PRIMARY",freq:"often",pair:["anger","anticipation"],answerEn:"aggression",answerKo:"공격성"},
      {category:"PRIMARY",freq:"often",pair:["anticipation","joy"],answerEn:"optimism",answerKo:"낙관"},
      {category:"SECONDARY",freq:"sometimes",pair:["joy","fear"],answerEn:"guilt",answerKo:"죄책감"},
      {category:"SECONDARY",freq:"sometimes",pair:["trust","surprise"],answerEn:"curiosity",answerKo:"호기심"},
      {category:"SECONDARY",freq:"sometimes",pair:["fear","sadness"],answerEn:"despair",answerKo:"절망"},
      {category:"SECONDARY",freq:"sometimes",pair:["surprise","disgust"],answerEn:"unbelief",answerKo:"불신"},
      {category:"SECONDARY",freq:"sometimes",pair:["sadness","anger"],answerEn:"envy",answerKo:"시기"},
      {category:"SECONDARY",freq:"sometimes",pair:["disgust","anticipation"],answerEn:"cynicism",answerKo:"냉소"},
      {category:"SECONDARY",freq:"sometimes",pair:["anger","joy"],answerEn:"pride",answerKo:"자부심"},
      {category:"SECONDARY",freq:"sometimes",pair:["anticipation","trust"],answerEn:"hope",answerKo:"희망"},
      {category:"TERTIARY",freq:"seldom",pair:["joy","surprise"],answerEn:"delight",answerKo:"기쁨"},
      {category:"TERTIARY",freq:"seldom",pair:["trust","sadness"],answerEn:"sentimentality",answerKo:"감상성"},
      {category:"TERTIARY",freq:"seldom",pair:["fear","disgust"],answerEn:"shame",answerKo:"수치심"},
      {category:"TERTIARY",freq:"seldom",pair:["surprise","anger"],answerEn:"outrage",answerKo:"격분"},
      {category:"TERTIARY",freq:"seldom",pair:["sadness","anticipation"],answerEn:"pessimism",answerKo:"비관"},
      {category:"TERTIARY",freq:"seldom",pair:["disgust","joy"],answerEn:"morbidness",answerKo:"병적 집착"},
      {category:"TERTIARY",freq:"seldom",pair:["anger","trust"],answerEn:"dominance",answerKo:"지배욕"},
      {category:"TERTIARY",freq:"seldom",pair:["anticipation","fear"],answerEn:"anxiety",answerKo:"불안"},
      {category:"OPPOSITE",freq:"opposite",pair:["joy","sadness"],answerEn:"bittersweetness",answerKo:"씁쓸한 기쁨"},
      {category:"OPPOSITE",freq:"opposite",pair:["trust","disgust"],answerEn:"ambivalence",answerKo:"양가감정"},
      {category:"OPPOSITE",freq:"opposite",pair:["fear","anger"],answerEn:"frozenness",answerKo:"정서마비"},
      {category:"OPPOSITE",freq:"opposite",pair:["surprise","anticipation"],answerEn:"confusion",answerKo:"혼란"}
];

const categoryNames = {
  PRIMARY:"PRIMARY DYADS",
  SECONDARY:"SECONDARY DYADS",
  TERTIARY:"TERTIARY DYADS",
  OPPOSITE:"OPPOSITE DYADS"
};
const freqNames = {
  often:"[often felt]",
  sometimes:"[sometimes felt]",
  seldom:"[seldom felt]",
  opposite:"[opposites]"
};

let current = 0;

const categoryPill = document.getElementById("category-pill");
const freqPill = document.getElementById("freq-pill");
const pairLabel = document.getElementById("pair-label");
const pairBox = document.getElementById("emotion-pair");
const ansBox = document.getElementById("answer-box");
const showBtn = document.getElementById("show-answer-btn");
const prevBtn = document.getElementById("prev-btn");
const nextBtn = document.getElementById("next-btn");
const slideNum = document.getElementById("slide-number");

function render(i){
  const s = slides[i];
  const L = emotionMeta[s.pair[0]];
  const R = emotionMeta[s.pair[1]];

  categoryPill.textContent = categoryNames[s.category] || s.category;
  freqPill.textContent = freqNames[s.freq] || s.freq;

  pairLabel.textContent = `${L.en} + ${R.en} (${L.ko} + ${R.ko})`;

  pairBox.innerHTML = `
    <div class="emotion-box" style="background:${L.color}">${L.en}<br><span>(${L.ko})</span></div>
    <div class="emotion-box" style="background:${R.color}">${R.en}<br><span>(${R.ko})</span></div>
  `;

  ansBox.classList.add("hidden");
  ansBox.textContent = "정답이 여기 표시됩니다.";
  showBtn.textContent = "정답 보기 · Show Answer";

  slideNum.textContent = i+1;
  prevBtn.disabled = i===0;
  nextBtn.disabled = i===slides.length-1;
}

showBtn.onclick = function(){
  if(ansBox.classList.contains("hidden")) {
    let s = slides[current];
    ansBox.classList.remove("hidden");
    ansBox.innerHTML = `<strong>${s.answerEn}</strong> (${s.answerKo})`;
    showBtn.textContent = "정답 가리기 · Hide Answer";
  } else {
    ansBox.classList.add("hidden");
    ansBox.textContent = "정답이 여기 표시됩니다.";
    showBtn.textContent = "정답 보기 · Show Answer";
  }
};

prevBtn.onclick = () => { if(current>0){current--;render(current);} };
nextBtn.onclick = () => { if(current<slides.length-1){current++;render(current);} };

document.addEventListener("keydown", e => {
  if(e.key==="ArrowLeft") prevBtn.onclick();
  if(e.key==="ArrowRight") nextBtn.onclick();
});

render(0);
</script>

</body>
</html>
